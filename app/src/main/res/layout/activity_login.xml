<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.style.yash.styleomega.Activity.LoginActivity">

    <TextView
        android:id="@+id/tittle1"
        android:layout_width="325dp"
        android:layout_height="48dp"
        android:layout_marginLeft="58dp"
        android:layout_marginTop="16dp"
        android:text="STYLE OMEGA"
        android:textColor="@android:color/white"
        android:textSize="36sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/email"
        android:layout_width="233dp"
        android:layout_height="64dp"
        android:layout_marginTop="58dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        android:textColorHint="?android:attr/textColorHint"
        android:textColorLink="?android:attr/colorBackground"
        app:layout_constraintHorizontal_bias="0.398"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tittle1"
        tools:layout_editor_absoluteY="101dp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="238dp"
        android:layout_height="59dp"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorLink="@android:color/background_dark"
        app:layout_constraintHorizontal_bias="0.383"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email" />

    <Button
        android:id="@+id/loginbtn"
        android:layout_width="121dp"
        android:layout_height="52dp"
        android:layout_marginBottom="151dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="8dp"
        android:background="@android:color/holo_blue_dark"
        android:text="Login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/signup" />

    <Button
        android:id="@+id/signup"
        android:layout_width="118dp"
        android:layout_height="55dp"
        android:layout_marginBottom="151dp"
        android:layout_marginRight="55dp"
        android:background="@android:color/holo_blue_dark"
        android:text="Sign Up"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>
